<div class="row">
  <div class="col-sm-12">
    <div class="recipe-list">
        <table border="1">
          <thead>
            <tr>
              <th>Recipe name</th>
              <th colspan="2">Options</th>
            </tr>
          </thead>

          <tbody>
            <% @recipes.each do |recipe| %>
              <tr>
                <td><%= recipe.recipe_name %></td>
                <td><%= link_to 'Show', recipe %></td>
                <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <%= link_to 'New Recipe', new_recipe_path %>
    </div>
  </div>
</div>

